## 
## .screenrc 
## 

##---------------------------------------- 
## encoding 
##---------------------------------------- 
defencoding UTF-8 

##---------------------------------------- 
## keybinding 
##---------------------------------------- 
#escape ^t^t 

## emacs-like window split 
#bind -c REGION 2 split 
#bind -c REGION 1 only 
#bind -c REGION 0 remove 
#bind -c REGION o focus 
#bind -c REGION \^ resize 
#bind x command -c REGION 

#bindkey -k F1 prev 
#bindkey -k F2 next 

##---------------------------------------- 
## set color
##---------------------------------------- 
term xterm-256color

##---------------------------------------- 
## status line 
##---------------------------------------- 
hardstatus alwayslastline "%{=b bw}[%Y/%m/%d %02c] %`%-w%{=b br}%n %t%{-}%+w" 
## hardstatus alwayslastline "%{= bW}[%m/%d %02c:%s] %{bW} %-w%{= wk}%n %t%{-}%+w %=%{g}$USER@$HOSTNAME[$LANG] (%l)" 

##---------------------------------------- 
## enable terminal(Terminal.app) scroll 
##---------------------------------------- 
termcapinfo xterm* ti@:te@ 

##---------------------------------------- 
## disable startup message 
##---------------------------------------- 
startup_message off 

##---------------------------------------- 
## auto-detach when screen hangup 
##---------------------------------------- 
autodetach on 

##---------------------------------------- 
## shell 
##---------------------------------------- 
#shell zsh 

##---------------------------------------- 
## set scroll back line 
##---------------------------------------- 
defscrollback 5000 

defwrap on

